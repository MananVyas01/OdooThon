{
  "info": {
    "name": "ReWear API Collection",
    "description": "Comprehensive API collection for the ReWear sustainable fashion platform",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "rewear-api-collection-v1"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{authToken}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\",\n  \"role\": \"user\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          },
          "response": []
        },
        {
          "name": "Login User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "  const response = pm.response.json();",
                  "  if (response.token) {",
                  "    pm.collectionVariables.set('authToken', response.token);",
                  "  }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@rewear.com\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          },
          "response": []
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/me",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "me"]
            }
          },
          "response": []
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Name\",\n  \"profilePicture\": \"https://example.com/avatar.jpg\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/profile",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "profile"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Items",
      "item": [
        {
          "name": "Get All Items",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/items",
              "host": ["{{baseUrl}}"],
              "path": ["items"]
            }
          },
          "response": []
        },
        {
          "name": "Create Item",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Vintage Denim Jacket\",\n  \"description\": \"Beautiful vintage denim jacket in excellent condition. Perfect for sustainable fashion lovers.\",\n  \"category\": \"outerwear\",\n  \"size\": \"M\",\n  \"condition\": \"good\",\n  \"brand\": \"Levi's\",\n  \"tags\": [\"vintage\", \"denim\", \"casual\", \"sustainable\"],\n  \"images\": [\n    {\n      \"url\": \"https://example.com/jacket1.jpg\",\n      \"alt\": \"Front view of jacket\",\n      \"isPrimary\": true\n    }\n  ],\n  \"originalPrice\": 80,\n  \"estimatedValue\": 60\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/items",
              "host": ["{{baseUrl}}"],
              "path": ["items"]
            }
          },
          "response": []
        },
        {
          "name": "Get Item by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/items/:id",
              "host": ["{{baseUrl}}"],
              "path": ["items", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "ITEM_ID_HERE"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Update Item",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated Item Title\",\n  \"description\": \"Updated description\",\n  \"condition\": \"like-new\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/items/:id",
              "host": ["{{baseUrl}}"],
              "path": ["items", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "ITEM_ID_HERE"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Delete Item",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/items/:id",
              "host": ["{{baseUrl}}"],
              "path": ["items", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "ITEM_ID_HERE"
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Swaps",
      "item": [
        {
          "name": "Get All Swap Requests",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/swaps",
              "host": ["{{baseUrl}}"],
              "path": ["swaps"]
            }
          },
          "response": []
        },
        {
          "name": "Create Swap Request",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"item\": \"REQUESTED_ITEM_ID\",\n  \"mode\": \"swap\",\n  \"message\": \"I would love to swap this item!\",\n  \"offeredItem\": \"OFFERED_ITEM_ID\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/swaps",
              "host": ["{{baseUrl}}"],
              "path": ["swaps"]
            }
          },
          "response": []
        },
        {
          "name": "Accept Swap Request",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"accepted\",\n  \"response\": {\n    \"message\": \"Great! Let's proceed with the swap.\"\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/swaps/:id",
              "host": ["{{baseUrl}}"],
              "path": ["swaps", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "SWAP_REQUEST_ID"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Complete Swap",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"completed\",\n  \"rating\": {\n    \"requesterRating\": 5,\n    \"ownerRating\": 5,\n    \"requesterReview\": \"Excellent condition!\",\n    \"ownerReview\": \"Great transaction!\"\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/swaps/:id/complete",
              "host": ["{{baseUrl}}"],
              "path": ["swaps", ":id", "complete"],
              "variable": [
                {
                  "key": "id",
                  "value": "SWAP_REQUEST_ID"
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
